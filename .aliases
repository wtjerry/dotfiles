alias o=xdg-open

alias cd..='cd ..'
alias ll='ls -l'
alias la='ls -lA'
alias mkdir='mkdir -p'

alias ls='ls --color=auto'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias gdt='git difftool -y'
alias gits='git status -su'
alias gitshow='git show --pretty="" --name-only'

alias vi=vim
alias view='vim -R'

alias nvim='~/programs/nvim.appimage'

if [ -f ~/.system_specific_aliases ]; then
    . ~/.system_specific_aliases
fi

